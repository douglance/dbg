{
  "name": "@dbg/workspace",
  "version": "0.2.0",
  "private": true,
  "type": "module",
  "license": "MIT",
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "pnpm -r --filter \"./packages/*\" --filter \"!@douglance/dbg\" run build",
    "build:release": "pnpm run build && pnpm --filter @douglance/dbg run build",
    "pack:release": "pnpm run build:release && (cd packages/npm && npm pack --silent)",
    "prepublishOnly": "pnpm run build",
    "test": "pnpm run build && vitest run",
    "test:watch": "vitest",
    "lint": "biome lint --error-on-warnings packages test",
    "lint:fix": "biome lint --write --unsafe packages test",
    "format": "biome format --write packages test",
    "check": "tsc --noEmit",
    "format:check": "biome format --error-on-warnings packages test",
    "ci": "pnpm run lint && pnpm run format:check && pnpm run check && pnpm run build && pnpm run test"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^22.13.1",
    "@vscode/debugprotocol": "^1.68.0",
    "devtools-protocol": "^0.0.1581282",
    "esbuild": "^0.25.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
